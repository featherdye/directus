{
  "collection": "database_rows",
  "options": {
    "icon": "dataset",
    "note": "Flexible row storage for custom databases"
  },
  "fields": [
    {
      "field": "database_id",
      "type": "uuid",
      "interface": "select-dropdown-m2o",
      "required": true,
      "note": "Parent database (global_databases or project_databases)"
    },
    {
      "field": "database_type",
      "type": "string",
      "interface": "select-dropdown",
      "options": {
        "choices": [
          { "text": "Global", "value": "global" },
          { "text": "Project", "value": "project" }
        ]
      },
      "required": true,
      "note": "Whether this belongs to global or project DB"
    },
    {
      "field": "project_id",
      "type": "uuid",
      "interface": "select-dropdown-m2o",
      "note": "Project context (for project DBs or global DB access)"
    },
    {
      "field": "row_data",
      "type": "json",
      "interface": "input-code",
      "required": true,
      "note": "Flexible JSON data matching the schema"
    },
    {
      "field": "row_index",
      "type": "integer",
      "interface": "input",
      "note": "Display order within database"
    },
    {
      "field": "is_locked",
      "type": "boolean",
      "interface": "boolean",
      "defaultValue": false,
      "note": "Prevent modifications"
    },
    {
      "field": "created_by_ai",
      "type": "boolean",
      "interface": "boolean",
      "defaultValue": false,
      "note": "Whether this row was generated by AI"
    },
    {
      "field": "validated",
      "type": "boolean",
      "interface": "boolean",
      "defaultValue": false,
      "note": "Human validation status"
    },
    {
      "field": "validation_notes",
      "type": "text",
      "interface": "textarea",
      "note": "Validation feedback or corrections"
    },
    {
      "field": "tags",
      "type": "json",
      "interface": "tags",
      "note": "Searchable tags"
    }
  ]
}
