# Security - Generate secure random strings for production
KEY="replace-with-random-string-32-chars"
SECRET="replace-with-random-string-64-chars"

# Admin Account
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change-this-strong-password"

# Database
DB_DATABASE="directus"
DB_USER="directus"
DB_PASSWORD="change-this-database-password"

# Public URL - Update with your domain
PUBLIC_URL="https://yourdomain.com"

# CORS - Update with your frontend domain
CORS_ENABLED="true"
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# Email Configuration (optional)
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_TRANSPORT="smtp"
EMAIL_SMTP_HOST="smtp.example.com"
EMAIL_SMTP_PORT="587"
EMAIL_SMTP_USER="your-smtp-user"
EMAIL_SMTP_PASSWORD="your-smtp-password"

# Optional Settings
PORT="8055"
LOG_LEVEL="info"
ACCESS_TOKEN_TTL="15m"
REFRESH_TOKEN_TTL="7d"
RATE_LIMITER_DURATION="60"
RATE_LIMITER_POINTS="50"
WEBSOCKETS_ENABLED="true"
EXTENSIONS_AUTO_RELOAD="false"
